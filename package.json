{
  "name": "just-juggle",
  "displayName": "Just Juggle - Time Tracker",
  "description": "Groups coding time by project automatically. Syncs with Just Juggle dashboard.",
  "publisher": "JustJuggle",
  "author": "Rokas Rudgalvis",
  "repository": "https://github.com/rudgalvis/just-juggle-vscode-extension",
  "version": "0.0.3",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "package": "vsce package",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "features": [
    "Automatic time tracking - no timers to start/stop",
    "Project-based logging with smart detection",
    "Privacy-first approach - only tracks coding time, not content",
    "Seamless integration with Just Juggle web platform",
    "Real-time sync across all your devices",
    "Detailed coding analytics and insights"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "just-juggle.openPanel",
        "title": "Just Juggle: Configuration"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "justJugglePanel",
          "name": "Just Juggle",
          "when": "justJuggleEnabled"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "justJuggle",
          "title": "Just Juggle",
          "icon": "$(clock)"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
